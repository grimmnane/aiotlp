    /> -->

    <van-cell title="地址" is-link bind:click="showAreaPopup" >
        <text class="">{{userInfo.address ? userInfo.address : '请选择'}}</text>
    </van-cell>
    <van-popup show="{{ userAreAPopup }}" safe-area-inset-bottom position="bottom" custom-style="height: 30%;">
        <van-area area-list="{{ areaList }}" value="110101" bind:confirm="chooseArea" bind:cancel="onAreaClose" />
    </van-popup>
</van-cell-group>

<van-cell-group custom-class="saveWrapper" border="{{ false }}">
    <van-button type="primary" bindtap="save">保存</van-button>
</van-cell-group>