    <van-cell 
        title="姓名" 
        is-link 
        link-type="navigateTo" 
        url="/pages/mine/personInfo/edit?type=name&val={{userInfo.name}}"
     >
        <open-data type="userNickName" lang="zh_CN" wx:if="{{!userInfo.name}}"></open-data>
        <text wx:else>{{userInfo.name}}</text>
    </van-cell>

    <van-cell title="性别" value="{{userInfo.sex == 0 ? '请填写性别' : userInfo.sex}}" bind:click="showGenderPopup" />
    <van-popup show="{{ userGenderPopup }}" safe-area-inset-bottom position="bottom" custom-style="background-color: #f2f3f4;height: 30%;">
        <van-picker columns="{{ columns }}" default-index="{{ 0 }}" bind:change="chooseGender" cancel="onGenderClose" active-class="gender_active" />
    </van-popup>

    <!-- <van-cell 
