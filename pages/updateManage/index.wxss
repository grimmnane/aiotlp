/* 新增 定位地址  */
.location_content{
  position: relative;
}
.location_value{
  width: 62% !important;
}
.location{
  display: inline-block;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 4px;
  color: #666;
  border: 1px solid #999;
  font-size: 26rpx;
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
}