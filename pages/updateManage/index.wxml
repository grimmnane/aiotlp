<!--index.wxml-->
<view class="container">
    <view >
        <van-cell-group>
            <van-field label="名称" value="{{ form.name }}"  required clearable  placeholder="请输入用户名" border="{{ false }}"  bind:change="changeName"/>
            <van-field label="地址" value="{{ form.address }}" required clearable  clickable  placeholder="请输入地址"  bind:change="changeAddress" />
            <van-field label="面积" value="{{ form.area }}" required clearable  type="number" placeholder="请输入面积" border="{{ false }}" bind:change="changeArea">
                <span slot="right-icon">
                    m<sup>2</sup>
                </span>
            </van-field>
            <van-field label="类型"  value="{{ form.typeName }}" required readonly  clickable placeholder="请选择类型" bindtap="showTypePopup" />
            <van-popup show="{{ isShowTypePopup }}"  position="bottom">
                <van-picker show-toolbar columns="{{ typeList }}"  bind:confirm="selectedType" bind:cancel="cancelTypePopup" />
            </van-popup>
            <van-field label="当前种植/养殖" value="{{ form.plantSpecie }}" required  clearable placeholder="请输入类型"  />
        </van-cell-group>
        
        <view class="submit-btn-wrap">
            <van-button type="primary"  custom-class="submit-btn" bindtap="submit">保存</van-button>
        </view>
    </view>

    <van-toast id="van-toast" />
</view>
