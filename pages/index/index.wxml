<!--index.wxml-->
<view class="container">
  <swiper autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{bannerList}}" wx:key="index">
      <swiper-item >
        <image class="banner"  mode="{{bannerMode}}" src="{{item.path}}"></image>
      </swiper-item>
    </block>
  </swiper>
  <van-notice-bar left-icon="volume-o" text="在代码阅读过程中人们说脏话的频率是衡量代码质量的唯一标准。"/>
  <!--我的设备-->
  <view>
    <view class="title primary-title" bindtap = "toggleDeviceHidden">
      <view>我的设备（1）</view>
      <view class="btn-group">
        <view class="mr-30" catchtap="toAddPage">
          <van-icon name="add-o" />
        </view>
        <view class="arrow {{deviceHidden ? '' : 'rotate'}}" >
          <van-icon name="arrow-down" />
        </view>
      </view>
    </view>
    <view class="list pa-16" hidden="{{deviceHidden}}">
        <view class="item" wx:for="{{deviceList}}" wx:key="index">
          <view>
            <view class="img-wrap">
              <image class="banner"  mode="{{bannerMode}}" src="{{item.path}}"></image>
            </view>
          </view>
          <view class="item-content">
              <view class="detail-item">
                  <view class="label">名称：</view>
                  <view class="value">我是一个很长很长很长很长很长很长很长很长很长很长很长很长的设备名称</view>
              </view>
              <view class="detail-item">
                  <view class="label">编号：</view>
                  <view class="value">110215411455110215411455-4415211</view>
              </view>
              <view class="detail-item">
                <view class="label">类型：</view>
                <view class="value">xxxxxxxxx</view>
              </view>
              <view class="detail-item">
                <view class="label">电量：</view>
                <view class="value">40%</view>
              </view>
          </view>
        </view>
    </view>
  </view>
