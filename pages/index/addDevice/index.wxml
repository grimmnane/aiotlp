<!--index.wxml-->
<view class="container">
  <view>
    <van-cell-group>
      <van-field label="设备类型"  value="{{ form.typeName }}" required readonly  clickable placeholder="请选择类型" border="{{ false }}" bindtap="showTypePopup" />
      <van-popup show="{{ isShowTypePopup }}"  position="bottom">
          <van-picker show-toolbar columns="{{ typeList }}"  bind:confirm="selectedType" bind:cancel="cancelTypePopup" />
      </van-popup>
    </van-cell-group>
    <van-cell-group>
      <van-field label="设备名称" value="{{ form.name }}"  required clearable  placeholder="请输入设备名称" border="{{ false }}"  bind:change="changeName"/>
    </van-cell-group>
    <van-cell-group>
        <van-field label="设备编码" value="{{ form.code }}" required clearable  clickable  placeholder="请输入编码" border="{{ false }}" bind:change="changeCode" />
    </van-cell-group>
  </view>
  <view>
    <van-checkbox value="{{ checked }}" shape="square" bind:change="onChange">
      同意此设备数据所有权归XX所有
    </van-checkbox>
  </view>
  <view class="submit-btn-wrap">
      <van-button type="primary"  custom-class="submit-btn" bindtap="submit">保存</van-button>
      <van-button type="default"  custom-class="submit-btn" bindtap="cancel">解绑</van-button>
  </view>

  <van-toast id="van-toast" />
  <van-dialog id="van-dialog" />
</view>
