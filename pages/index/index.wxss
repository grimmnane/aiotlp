  border-bottom: 1px solid rgba(0,0,0,0.05);
}
.top{
  display: flex;
  padding: 0 20rpx;
}
.top .left{
  width: 160rpx;
}
.top .left image{width: 100%;max-height: 140rpx;}
.top .right{
  width: calc(100% - 160rpx);
  padding-left: 20rpx;
}
.top .right .detail-item2{
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
}
.top .right .detail-item2 .label2{
  color:#333;
  font-size: 26rpx;
  font-weight: bold;
}
.top .right .detail-item2 .value2{
  color:#666;
  opacity: .8;
  font-size: 26rpx;
  padding-left: 20rpx;
}
.bottom{
  /* display: flex; */
  padding: 20rpx 20rpx 0;
}
.bottom .detail-item2{
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  margin-bottom: 20rpx;
}
.bottom .detail-item2 .label2{
  width: 160rpx;
  line-height: 1;
  color:#333;
  font-size: 26rpx;
  font-weight: bold;
  vertical-align: top;
}
.bottom .detail-item2 .value2{
  width: calc(100% - 160rpx);
  line-height: 1.2;
  color:#666;
  opacity: .8;
  font-size: 26rpx;
  padding-left: 20rpx;
  vertical-align: top;
}

