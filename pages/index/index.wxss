.flex{
  display: flex;
  align-items: center;
}
.flex-sb{
  justify-content: space-between;
}
.flex-1{
  flex:1;
}
.pt-18{
  padding-top: 18rpx;
}
.pa-18{
  padding: 18rpx;
}
.ptb-18{
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}
.plr-18{
  padding-left: 18rpx;
  padding-right: 18rpx;
}
.mt-18{
  margin-top: 18rpx;
}
.mr-10{
  margin-right: 10rpx;
}
.mr-30{
