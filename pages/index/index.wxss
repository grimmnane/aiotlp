.flex{
  display: flex;
  align-items: center;
}
.pa-16{
  padding:16rpx;
}
.ptb-16{
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}
.plr-16{
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.mr-10{
  margin-right: 10rpx;
}

.container{
  height: calc(100vh - 50px);
  overflow-y: auto;
  overflow-x: hidden;
}
.banner{
  width:100%;
  height:100%;
}

.title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color:#fff;

}
