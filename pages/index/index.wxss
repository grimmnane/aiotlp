/**index.wxss**/
.flex{
  display: flex;
  align-items: center;
}
.flex-sb{
  justify-content: space-between;
}
.flex-1{
  flex:1;
}
.pt-18{
  padding-top: 18rpx;
}
.pa-18{
  padding:18rpx;
}
.ptb-18{
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}
.plr-18{
  padding-left: 18rpx;
  padding-right: 18rpx;
}
.mt-18{
  margin-top: 18rpx;
}
.mr-10{
  margin-right: 10rpx;
}
.mr-30{
  margin-right: 30rpx;
}

.container{
  height: calc(100vh - 50px);
  overflow-y: auto;
  overflow-x: hidden;
}

.container-height{
  height:calc(100vh - 94px)
}
.banner{
  width:100%;
  height:100%;
}

.title{
  display: flex;
  justify-content: space-between;
  align-items: center;


}
.primary-title{
  position: relative;
  padding:18rpx 22rpx 18rpx 40rpx;
  font-size: 16px;
  background: #fff;
  margin-top: 18rpx;
  
}
.primary-title::before{
  content:'';
  position: absolute;
  left:20rpx;
  top:50%;
  width:8rpx;
  height: 35rpx;
  background:var(--primary-color);
  transform: translateY(-50%);
}

.primary-title .name{
  font-size: 30rpx;
  font-weight: bold;
}

.secondary-title{
  margin-top: 18rpx;
  padding: 18rpx;
  background: #fff;
}
.secondary-title .name{
  
  font-size: 28rpx;
  font-weight: bold;
}
.small-btn-wrap{
  text-align:right;
  margin-top: 18rpx;
}
.small-btn{
  font-size: 24rpx !important;
  padding:12rpx 40rpx !important;
  line-height:initial !important;
  height: initial !important;
  
}
.plus-btn {
  /* font-size: 24rpx; */
  color: var(--primary-color);
}
.area-container{
  /* padding:12rpx; */
  padding-bottom: 18rpx;
}

.itle .van-checkbox__icon .van-icon{
  border:red solid 1px;
}
.title .van-checkbox__icon {
  border:#fff solid 1px;
}
.title .van-checkbox__icon--checked {
  border:none;
}
.btn-group{
  display: flex;
}
.arrow{
  transition: all .5s;
}
.rotate{
  transform: rotate(180deg);
}
.list{
  /* padding:16rpx; */
  overflow-x: auto;
}
.item-wrap{
  border-bottom:#F0F2F7 dashed 1px;
}
.item{
  display: flex;
  background:#fff;
  padding:24rpx;
  box-shadow: 0px 5px 40px 0px rgba(0,0,0,0.03); 
}
.title-checkbox{
}
.img-wrap{
  width:160rpx;
  height:140rpx;
}
.item-content{
  flex:1;
  margin-left: 15rpx;
}
.detail-item{
  display: flex;

  margin-bottom: 15rpx;
  font-size: 14px;
}
.detail-item .label{
  width:90rpx;
  flex-shrink: 0;
  color:#7E8188;
}
.detail-item .value{
  color:#32353B;
}

.shareBar{
  position: fixed;
  bottom:50px;
  left:0;
  right:0;
  background:#fff;
  box-sizing: border-box;
  padding-left: 19rpx;
  height:44px;
  line-height:44px;
}
.shareBar .checked{
  padding-right: 18rpx;
  color:#32353B;
  font-size: 28rpx;
}
.shareBar .num{
  color:#ff7347;
  font-size: 35rpx;
  font-weight: bold;
  padding: 0 10rpx;
}