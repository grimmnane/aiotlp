.container{
  height: calc(100vh - 50px);
  overflow-y: auto;
  overflow-x: hidden;
}

.container-height{
  height:calc(100vh - 94px)
}
.banner{
  width:100%;
  height:100%;
}

.title{
  display: flex;
  justify-content: space-between;
  align-items: center;


}
.primary-title{
  position: relative;
  padding:18rpx 22rpx 18rpx 40rpx;
  font-size: 16px;
  background: #fff;
  margin-top: 18rpx;
  
}
.primary-title::before{
  content:'';
  position: absolute;
  left:20rpx;
  top:50%;
  width:8rpx;
  height: 35rpx;
  background:var(--primary-color);
  transform: translateY(-50%);
}

.primary-title .name{
  font-size: 30rpx;
  font-weight: bold;
}

.secondary-title{
  margin-top: 18rpx;
  padding: 18rpx;
  background: #fff;
}
.secondary-title .name{
  
  font-size: 28rpx;
  font-weight: bold;
}
.small-btn-wrap{
  text-align:right;
  margin-top: 18rpx;
}
.small-btn{
  font-size: 24rpx !important;
  padding:12rpx 40rpx !important;
  line-height:initial !important;
  height: initial !important;
  
}
.plus-btn {
  /* font-size: 24rpx; */
  color: var(--primary-color);
}
.area-container{
  /* padding:12rpx; */
  padding-bottom: 18rpx;
}

.itle .van-checkbox__icon .van-icon{
  border:red solid 1px;
}
.title .van-checkbox__icon {
  border:#fff solid 1px;
}
.title .van-checkbox__icon--checked {
  border:none;
}
.btn-group{
  display: flex;
  align-items: center;
}
.arrow{
  transition: all .5s;
}
.rotate{
  transform: rotate(180deg);
  /* padding-right: 22rpx;
  position: relative; */
}
