.list{
  /* padding:16rpx; */
  /* overflow-x: auto; */
}
.item-wrap{
  border-bottom:#F0F2F7 dashed 1px;
}
.item{
  display: flex;
  background:#fff;
  padding:24rpx;
  box-shadow: 0px 5px 40px 0px rgba(0,0,0,0.03); 
}
.item-thumb{
  width: 160rpx;
  padding-top: 20rpx;
}
/* .title-checkbox{} */
.img-wrap{
  width:160rpx;
  height:140rpx;
  /* margin-top: 20rpx; */
}
.item-content{
  width: calc(100% - 160rpx);
  /* width: 75%; */
  /* flex:1; */
  padding-left: 30rpx;
}
.detail-item{
  width: 100%;
  display: flex;
  margin-bottom: 15rpx;
  font-size: 14px;
}
.detail-item .label{
  width: 140rpx;
  flex-shrink: 0;
  color:#333;
  font-size: 26rpx;
  font-weight: bold;
}
.detail-item .value{
  width: calc(100% - 140rpx);
  padding-right: 30rpx;
  opacity: .8;
  color:#666;
}

.shareBar{
  position: fixed;
  bottom:50px;
  left:0;
  right:0;
  background:#fff;
  box-sizing: border-box;
  padding-left: 19rpx;
  height:44px;
  line-height:44px;
}
.shareBar .checked{
  padding-right: 18rpx;
  color:#32353B;
  font-size: 28rpx;
}
.shareBar .num{
  color:#ff7347;
  font-size: 35rpx;
  font-weight: bold;
  padding: 0 10rpx;
}



