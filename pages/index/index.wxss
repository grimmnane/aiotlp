.primary-title{
  padding:22rpx;
  font-size: 16px;
  background:var(--primary-color);
}
.secondary-title{
  padding:12rpx;
  font-size: 14px;
  background:var( --secondary-color);
}

.area-container{
  padding:12rpx;
}

.btn-group{
  display: flex;
}
.arrow{
  transition: all .5s;
}
.rotate{
  transform: rotate(180deg);
}
.list{
  /* padding:16rpx; */
  overflow-x: auto;
}
.item{
  display: flex;
  background:#fff;
  padding:24rpx;
}
.title-checkbox{
}
.img-wrap{
  width:160rpx;
  height:140rpx;
}
.item-content{
  flex:1;
  margin-left: 15rpx;
}
.detail-item{
  display: flex;

  margin-bottom: 15rpx;
  font-size: 14px;
}
.detail-item .label{
  width:90rpx;
  flex-shrink: 0;
  color:#7E8188;
}
.detail-item .value{
  color:#32353B;
}