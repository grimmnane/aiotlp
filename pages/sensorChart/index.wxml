<!--pages/sensorChart/index.wxml-->
<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="当天">
  </van-tab>

  <van-tab title="7天">
  </van-tab>

  <van-tab title="30天">
  </van-tab>
</van-tabs>

<view class="container">
  <!-- <scroll-view class="scrollView" scroll-x="true"> -->
    <ec-canvas id="mychart-dom-line" canvas-id="mychart-line_now" ec="{{ ec }}"></ec-canvas>
  <!-- </scroll-view> -->
</view>

<view class="msg">
  <view class=""><view class="label">设备名称：</view>{{areaInfo['设备名称']}}</view>
  <view class="w30p"><view class="label">状态：</view>{{areaInfo['状态']}}</view>
  <view class="" data-name="{{areaInfo['传感器名称']}}"><view class="label">传感器名称：</view>{{areaInfo['传感器名称']}}</view>
  <view class="w30p"><view class="label">电量：</view>{{areaInfo['电量']}}</view>
  <view class=""><view class="label">所属区域：</view>{{areaInfo['区域']}}</view>
</view>
<view class="select" wx:if="{{from == '1'}}">
  <view class="">重新选择区域：</view>
  <view class="">
    <van-cell title="{{areaValue.text}}" is-link bind:click="showPopup" />
    <van-popup show="{{ show }}" position="bottom" custom-class="popup">
      <van-picker columns="{{ columns }}" bind:confirm="onAreaChange" show-toolbar bind:cancel="onClose" />
    </van-popup>
  </view>
</view>

<view class="btn-group" wx:if="{{from == '1'}}">
  <view class="submit-btn-wrap">
    <van-button type="primary" custom-class="submit-btn" bindtap="saveSensor">保存</van-button>
  </view>
  <view class="submit-btn-wrap">
    <van-button type="primary" custom-class="submit-btn" bind:click="toSetWarningPage">设置预警值</van-button>
  </view>
</view>

<van-toast id="van-toast" />
<van-dialog id="van-dialog" />