/* pages/share/bind.wxss */
.main{
    height: 100vh;
    padding-top: 10vh;
    position: relative;
    box-sizing: border-box;
}
.text-center{
    text-align: center;
}

.name{
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
}

.desc{
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
}

.cover{
    text-align: center;
    margin-top: 20rpx;
}
/* .cover image{} */
.cover .device{
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-top: 5rpx;
}

.btns{
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
}
.btns button{
    width: 90%;
    margin: 0 auto;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: white;
    background-color: #71BB6E;
    border-radius: 50rpx;
    font-size: 30rpx;
    letter-spacing: 40rpx;
    padding-left: 80rpx;
}



.cover_bg{
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.8);
    position: fixed;
    top: 0;
    left: 0;
}
.wrapper{
    width: 100%;
    height: 50%;
    box-sizing: border-box;
    max-height: 100%;
    background-color: white;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    overflow-y: auto;
}
.secret-title{
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    padding: 60rpx 0 0;
}

.secret-main{
    font-size: 24rpx;
    line-height: 40rpx;
    padding: 0 50rpx;
    /* font-weight: 200; */
    margin-top: 40rpx;
    color: #333;
}
.secret-main navigator{display: inline-block;color: rgb(0, 122, 204);}

.mr-20{
    margin-right: 20rpx;
}
.ml-20{
    margin-left: 20rpx;
}
.flex-1{
    flex:1;
}
.btn-group{
    position: absolute;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    width:100%;
    padding:14rpx 20rpx;
    box-sizing: border-box;
}
.bind.btn-grou{
    bottom: 40rpx;
}
.btn-group .small.submit-btn{
    width:100%;
    height:70rpx !important;
}
.btn-group .submit-btn{
    width:100%;
    height:82rpx !important;
}

.default-img{
    /* width:53px; */
    /* height:53px; */
    max-width: 400px;
    max-height: 320px;
}

.list{
    height:70vh;
    overflow:auto;
}