/* pages/share/bind.wxss */
.main{
    height: 100vh;
    text-align: center;
    padding-top: 10vh;
    position: relative;
    box-sizing: border-box;
}

.name{
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
}

.desc{
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
}

.cover{
    text-align: center;
    margin-top: 20rpx;
}
/* .cover image{} */
.cover .device{
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-top: 5rpx;
}

.btns{
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 60rpx;
    left: 50%;
    transform: translateX(-50%);
}
.btns button{
    width: 90%;
    margin: 0 auto;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    color: white;
    background-color: #71BB6E;
    border-radius: 50rpx;
    font-size: 30rpx;
    letter-spacing: 40rpx;
    padding-left: 80rpx;
}

