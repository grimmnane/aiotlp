/* pages/share/secret.wxss */
.custom{position: relative;}
.title{
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
    padding: 60rpx 0 0;
}

.main{
    font-size: 24rpx;
    line-height: 40rpx;
    padding: 0 50rpx;
    /* font-weight: 200; */
    margin-top: 40rpx;
    color: #333;
}
.main navigator{display: inline-block;color: rgb(0, 122, 204);}

.btns{
    width: 92%;
    margin-top: 20rpx;
    padding: 0 50rpx;
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
}
.btns button{
    width: 45%;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 50rpx;
    text-align: center;
    background-color: #f5f5f5;
    font-size: 28rpx;
    border: none;
}
.btns button.quit{
    color: #333;
}
.btns button.tobind{
    color: #71BB6E;
}