/**index.wxss**/
.container{
    background-color: white;
}

/* logo */
.img-wrap{
    text-align: center;
    /* height: 100vh; */
    background:#fff;
}
.logo{
    width:100px;
    height: 100px;
    padding-top: 40%;
}

/* name */
.word{
    text-align: center;
    margin-top: 40rpx;
}
.word view{
    display: inline-block;
    width: 51rpx;
    height: 41rpx;
    margin: 0 6rpx;
}
.word view image{
    width: 100%;height: 100%;
    /* animation: move1 1.6s infinite; */
    /* animation-timing-function:linear; */
    vertical-align: top;
}
.word view:nth-of-type(1) image{
    animation: move1 1s 1;
    animation-timing-function:linear;
}
.word view:nth-of-type(2) image{
    animation: move1 1s 1;
    animation-timing-function:linear;
    animation-delay: .3s;
}
.word view:nth-of-type(3) image{
    animation: move1 1s 1;
    animation-timing-function:linear;
    animation-delay: .6s;
}
.word view:nth-of-type(4) image{
    animation: move1 1s 1;
    animation-timing-function:linear;
    animation-delay: .9s;
}

@keyframes move1{
    0%{margin-top: 0;}
    50%{margin-top: -20rpx;}
    100%{margin-top: 0;}
}