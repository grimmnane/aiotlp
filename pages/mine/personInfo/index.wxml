<!--pages/mine/personInfo/index.wxml-->
<van-cell-group>
    <van-cell title="头像" bind:click="showPopup">
        <view>
            <image class="avatar" src="{{userInfo.userAvatarUrl}}" />
        </view>
    </van-cell>
    <van-popup show="{{ userAvatarPopup }}" safe-area-inset-bottom position="bottom" bind:close="onClose" custom-style="height: 40%;">
        <view><button class="openCamera" bindtap="openCamera">打开相机</button></view>
        <view><button class="clooseImg" bindtap="clooseImg">选择头像</button></view>
    </van-popup>

    <van-cell 
        title="姓名" 
        is-link value="{{userInfo.userNickName}}" 
        link-type="navigateTo" 
        url="/pages/mine/personInfo/edit?type=name&val={{userInfo.userNickName}}"
     />

    <van-cell title="性别" value="{{userInfo.userGender == 0 ? '请填写性别' : userInfo.userGender}}" bind:click="showGenderPopup" />
    <van-popup show="{{ userGenderPopup }}" safe-area-inset-bottom position="bottom" custom-style="background-color: #f2f3f4;height: 30%;">
        <van-picker columns="{{ columns }}" default-index="{{ 0 }}" bind:change="chooseGender" cancel="onGenderClose" active-class="gender_active" />
    </van-popup>

    <van-cell 
        title="手机号" 
        is-link value="{{userInfo.phoneNumber ? userInfo.phoneNumber : '请填写手机号'}}" 
        link-type="navigateTo" 
        url="/pages/mine/personInfo/edit?type=phone&val={{userInfo.phoneNumber}}" 
    />

    <van-cell title="地址" is-link value="{{userInfo.userAdress ? userInfo.userAdress : '请选择'}}" bind:click="showAreaPopup" />
    <van-popup show="{{ userAreAPopup }}" safe-area-inset-bottom position="bottom" custom-style="height: 30%;">
        <van-area area-list="{{ areaList }}" value="110101" bind:confirm="chooseArea" bind:cancel="onAreaClose" />
    </van-popup>
</van-cell-group>

<van-cell-group custom-class="saveWrapper" border="{{ false }}">
    <van-button type="primary" bindtap="save">保存</van-button>
</van-cell-group>