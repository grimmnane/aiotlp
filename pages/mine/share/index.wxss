/* pages/mine/share/index.wxss */
.tab-container{
    padding-top: 20rpx;
}

.container {
    height: auto;
    min-height: 100vh;
}

.item{
    width: 100%;
    height: 100rpx;
    display: flex;
    padding: 0 40rpx;
    background-color: white;
    margin-bottom: 20rpx;
    box-sizing: border-box;
}
.item .name{
    width: 57%;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #333;
}
.item .time{
    width: 43%;
    line-height: 100rpx;
    font-size: 26rpx;
    color: #666;
}
