<!--index.wxml-->
<view class="container">
   <view wx:if="{{!list.length && isLoaded}}" class="empty-wrap">
      <van-empty class="custom-image" image="https://img.yzcdn.cn/vant/custom-empty-image.png" description="暂无数据"/>
   </view>
   <view class="list" wx:else>
      <view class="item" wx:for="{{list}}" wx:key="index" data-id="{{item.id}}"  bindtap = "toDetailPage" >
         <view class="item-content">
            <view class="detail-item">
               <view class="label">区域名称：</view>
               <view class="value">{{item.areaName}}</view>
            </view>
            <view class="detail-item">
               <view class="label">类型：</view>
               <view class="value">{{item.areaTypeName}}</view>
            </view>
            <view class="detail-item">
               <view class="label">种植/养殖：</view>
               <view class="value">{{item.areaPurpose}}</view>
            </view>
         </view>
         <view class="item-footer">
            <view class="edit-btn btn" data-id="{{item.id}}" catchtap="edit">修改</view>
            <view class="del-btn btn"  data-id="{{item.id}}" catchtap="remove">删除</view>
         </view>
      </view>
   </view>
   <view class="submit-btn-wrap fixed-button {{isIphoneX? 'iphoneX' : ''}}">
      <van-button type="primary" bind:click="append" custom-class="submit-btn">新建区域</van-button>
   </view>

   <van-toast id="van-toast" />
   <van-dialog id="van-dialog" />
</view>
