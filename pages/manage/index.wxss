/**index.wxss**/
.container{
  position: relative;
}
.list{
  padding: 0 17rpx 0 17rpx;
  height: calc(100vh - 50px - 60px);
  overflow-y: auto;
  overflow-x: hidden;
}
.item{
  background:#fff;
  margin-bottom: 20rpx;

}
.item-content{
  padding:20rpx 20rpx 8rpx 20rpx;
}
.item-content .detail-item{
  display: flex;
  font-size: 14px;
  padding-bottom: 12rpx;
}
.detail-item .label{
  color:#7E8188;
  /* width:200rpx; */
  width: 155rpx;
  margin-right: 20rpx;
  text-align: right;

}
.detail-item .value{
  flex:1;
  color:#32353B;
}

.item-footer{
  border-top: #F4F4F4 solid 1px;
  text-align: right;
  padding: 12rpx 24rpx;
}
.btn{
  font-size: 14px;
  color:#7E8188;
  display: inline-block;
}
.edit-btn{
  margin-right: 70rpx;
}

.fixed-button{
  position: fixed;
  bottom: 50px;
  left:0;
  right:0;
}
.submit-btn-wrap{
  background:#fff;
  padding:14rpx 20rpx;
  text-align:center;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.submit-btn{
  width:100%;
  height:82 rpx !important;
}